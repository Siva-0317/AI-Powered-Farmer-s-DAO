# copy to .env and edit
FLASK_ENV=development
SECRET_KEY=super-secret-key
DATABASE_URL=sqlite:///db.sqlite3

# chainlink webhook (optional push mode)
CHAINLINK_WEBHOOK_URL=https://<your-chainlink-node>/v2/jobs/<job-id>/runs
CHAINLINK_API_KEY=your-node-api-key

# if your Chainlink flow is pull-based (Functions), set PUSH_TO_CHAINLINK=false
PUSH_TO_CHAINLINK=true
